<div style="margin: 5px;">
<h1> <%= @issue.title %></h1>
<%= render 'workflowForm', issue: @issue %>


<p>
  <strong>Kind:</strong>
  <%= @issue.kind %>
</p>

<p>
  <strong>Priority:</strong>
  <%= @issue.priority %>
</p>

<p>
  <strong>Status:</strong>
  <%= @issue.status %>
</p>

<p>
  <strong>Created:</strong>
  <%= @issue.created_at %>
</p>

<p><b>Status:</b> <%= @issue.workflow %> </p>

<br>

<div class="col-md-8">
  <% if @issue.attachments.any? %>
      <h3>Attachments (<%= @issue.attachments.count %>)</h3>
      <ol class="attachments">
        <%= render @attachments %>
      </ol>
      <%= will_paginate @attachments %>
  <% end %>
<br>
  <%= render 'attachments/form' %>
</div>

<div>
  <h2> <%= @issue.comments.count %> Comments </h2>
  <br><%= render @issue.comments %><br>
</div>
<div>
  <h3>Add a comment:</h3>
  <%= render 'comments/form' %>
</div>

<%= link_to 'Edit', edit_issue_path(@issue) %> |
<%= link_to 'Back', issues_path %>
</div>