<%= form_with(model: issue, local: true) do |form| %>
  <% if issue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
      <% issue.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
        
      
  <div class="field-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :issue_title %>
  </div>

  <div class="field">
    <%= form.label :kind %>
    <%= select(:issue, :kind, [['Bug', 'Bug'], ['Enhancement', 'Enhancement'], ['Proposal', 'Proposal'], ['Task', 'Task']]) %>
       
  </div>

  <div class="field">
    <%= form.label :priority %>
     <%= select(:issue, :priority, [['Trivial', 'Trivial'], ['Minor', 'Minor'], ['Major', 'Major'], ['Critical', 'Critical'],['Blocker', 'Blocker']]) %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= select(:issue, :status, [['New', 'New '], ['Open', 'Open'], ['Closed', 'Closed'], ['Resolved', 'Resolved']]) %>
       
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
