<div class="main-custom-container">
<h1 class="app-header--heading">Issues</h1>

<div class="maskable aui-page-panel forks-enabled can-create">
  <table class="aui aui-table-interactive bb-list issues-list iterable optcols_0">
  <thead>
    <tr>
      <th>Title</th>
      <th>Kind</th>
      <th>Priority</th>
      <th>Status</th>
      <th>Workflow</th>
      <th>Watched</th>
      <th>Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr class=" iterable-item">
        <td><%= issue.title %></td>
        <td><%= issue.kind %></td>
        <td><%= issue.priority %></td>
        <td><%= issue.status %></td>
        <td><%= issue.workflow %></td>
        <td><%= issue.watch %></td>
        <td><%= issue.created_at %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<div class="aui-button">
<%= link_to 'New Issue', new_issue_path %>
</div>
<br>
<br>

<div class="filter-container">
  <p class="filter-label">Filter by:</p>
  <ul class="filter-status">
    <li>
      <%= link_to 'All', issues_path %>
    </li>
    <li>
      <%= link_to 'Open',  issues_path(:workflow => 'open')%>
    </li>

    <li>
      <%= link_to 'Closed',  issues_path(:workflow => 'closed')%>
    </li>
    <li>
      <%= link_to 'Resolved',  issues_path(:workflow => 'resolved')%>
    </li>
    <li>
      <%= link_to 'Wontfix',  issues_path(:workflow => 'wontifx')%>
    </li>
    <li>
      <%= link_to 'Assigned to me', issues_path(:user_id => current_user) %>

    </li>
    <li>
      <%= link_to 'Watching', issues_path(:watch => true) %>
    </li>

  </ul>
</div>
</div>